{% extends 'base.html.twig' %}

{% block header_title %}<h4 class="headerTitle">Modifier <strong>{{ user.username }}</strong></h4>{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="row">
        {{ form_start(form, {'action' : path('user_edit', {'id' : user.id})}) }}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-success pull-right"><i class="fa-solid fa-user-pen left"></i> Modifier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
