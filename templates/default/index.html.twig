{% extends 'base.html.twig' %}

{% block header_title %}
    <h4 class="headerTitle">Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h4>
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center">
        <a href="{{ path('task_create') }}" class="btn btn-success m-2"><i class="fa-solid fa-plus left"></i> Créer une nouvelle tâche</a>
        <a href="{{ path('task_list') }}" class="btn btn-primary m-2"><i class="fa-solid fa-list-ul left"></i> Consulter la liste des tâches à faire</a>
        <a href="{{ path('finished_task_list') }}" class="btn btn-secondary m-2"><i class="fa-solid fa-check left"></i> Consulter la liste des tâches terminées</a>
    </div>
{% endblock %}
