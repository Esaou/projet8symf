{% extends 'base.html.twig' %}

{% block body %}
    <h4 class="headerTitle pb-2">Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h4>
    {% if is_granted('ROLE_USER') %}
        <div class="buttonsAccueil pt-2 pb-2">
            <a href="{{ path('task_create') }}" class="btn btn-success m-2"><i class="fa-solid fa-plus left"></i> Créer une nouvelle tâche</a>
            <a href="{{ path('task_list') }}" class="btn btn-primary m-2"><i class="fa-solid fa-list-ul left"></i> Tâches à faire</a>
            <a href="{{ path('finished_task_list') }}" class="btn btn-secondary m-2"><i class="fa-solid fa-check left"></i> Tâches terminées</a>
        </div>
    {% endif %}
    <img class="slide-image imageAccueil mt-4 mb-1" src="{{ asset('img/accueil.jpg') }}" alt="todo list">
{% endblock %}
